---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section class="hero">
        <h1>Cognara</h1>
        <p class="tagline">An AI-First Content & Innovation Entity</p>
        <p class="description">
          We leverage the full spectrum of modern AI to create documentary-grade content 
          that was previously only possible for large studios. Human vision. AI execution. 
          Infinite scale.
        </p>
      </section>

      <section class="mission">
        <h2>Our Mission</h2>
        <div class="mission-points">
          <div>
            <h3>AI-Native Production</h3>
            <p>From scripting to animation, we use LLMs, generative AI, and synthesis tools to produce what once required entire teams.</p>
          </div>
          <div>
            <h3>Knowledge Synthesis</h3>
            <p>Complex history, science, and data transformed into engaging, accessible narratives.</p>
          </div>
          <div>
            <h3>Strategic Innovation</h3>
            <p>Testing how a single creator can manage multiple high-output channels through AI orchestration.</p>
          </div>
        </div>
      </section>

      <section class="projects">
        <h2>Our Projects</h2>
        <div class="project-grid">
          <div class="project">
            <h3>Cognara_ai</h3>
            <p>Our flagship channel exploring AI applications, news, and tutorials.</p>
          </div>
          <div class="project">
            <h3>Parallel Lives</h3>
            <p>An alternate history anthology: speculative storytelling meets educational media.</p>
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero {
    text-align: center;
    padding: 4rem 0;
  }

  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
  }

  .tagline {
    font-size: 1.5rem;
    color: #666;
    margin-bottom: 1.5rem;
  }

  .description {
    font-size: 1.1rem;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .mission, .projects {
    margin-top: 4rem;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .mission-points, .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .mission-points > div, .project {
    padding: 1.5rem;
    border: 1px solid #ddd;
    border-radius: 8px;
  }

  h3 {
    margin-bottom: 0.5rem;
  }
</style>